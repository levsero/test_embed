{
  "presets": [
    [
      "@babel/preset-env",
      {
        "useBuiltIns": "usage",
        "modules": false,
        "corejs": "3.6"
      }
    ],
    [
      "@babel/preset-react",
      {
        "runtime": "automatic"
      }
    ]
  ],
  "ignore": ["src/translation/*.js"],
  "env": {
    "test": {
      "presets": [
        ["@babel/preset-env", { "targets": { "node": "current" }, "useBuiltIns": false }],
        [
          "@babel/preset-react",
          {
            "runtime": "automatic"
          }
        ]
      ],
      "plugins": ["babel-plugin-styled-components", "dynamic-import-node"]
    },
    "development": {
      "plugins": ["babel-plugin-styled-components", "lodash"]
    },
    "production": {
      "plugins": [
        [
          "babel-plugin-styled-components",
          {
            "displayName": false
          }
        ],
        "lodash"
      ]
    },
    "e2e": {
      "presets": [
        ["@babel/preset-env", { "targets": { "node": "current" } }],
        [
          "@babel/preset-react",
          {
            "runtime": "automatic"
          }
        ]
      ]
    }
  }
}
