{
  "name": "engagement_framework",
  "version": "0.1.0",
  "description": "3rd party embeddable framework and API",
  "config": {
    "watchConfigPath": "/config/.watch.example"
  },
  "scripts": {
    "build:version:generate": "git rev-parse --short HEAD > ./dist/VERSION_HASH",
    "build:version:clean": "rm -rf ./dist/VERSION_HASH",
    "prebuild-examples": "uglifyjs --compress --mangle -- ./src/bootstrap.js > ./dist/bootstrap.js",
    "build-examples": "node script/build-examples.js -- $npm_package_config_watchConfigPath",
    "prewatch": "npm run build:version:generate && npm run build-examples",
    "build-setup:prod": "npm run build:version:generate && npm run prebuild-examples && rm -rf ./dist/*.map",
    "build:ze_translations": "uglifyjs -c -m -o dist/ze_translations.js -- src/translation/ze_translations.js",
    "build:translationsIndividual": "rm -rf dist/locales && cp -r src/translation/locales dist/locales",
    "build:ze_localeIdMap": "uglifyjs -c -m -o dist/ze_localeIdMap.js -- src/translation/ze_localeIdMap.js",
    "build:ze_countries": "uglifyjs -c -m -o dist/ze_countries.js -- src/translation/ze_countries.js",
    "build:chat_sdk": "uglifyjs -c -m -o dist/web_sdk.js -- node_modules/chat-web-sdk/web_sdk.js",
    "prebuild:ac": "script/ac_fetch_i18n && cp manifest.json dist && npm run build:ze_translations && npm run build:ze_localeIdMap && npm run build:ze_countries && npm run build:chat_sdk && npm run build:translationsIndividual",
    "build:prod": "script/fetch_i18n && webpack --config ./webpack/webpack.prod.js",
    "build:ac": "webpack --config ./webpack/webpack.ac.prod.js",
    "build:ac_new": "webpack --config ./webpack/webpack.ac.prod_new.js",
    "build:ac-validate": "npm run build:ac && npm run build:ac_new && npm run size",
    "watchConf": "node script/update_watch_config",
    "postwatchConf": "npm run watch",
    "watch": "webpack-dev-server --config ./webpack/webpack.dev.js",
    "watchConf:ac": "node script/update_watch_config",
    "postwatchConf:ac": "npm run watch:ac",
    "watch:ac": "node script/start_ac_dev.js -- $npm_package_config_watchConfigPath && npm run prewatch && webpack-dev-server --config ./webpack/webpack.ac.dev.js",
    "build": "npm run build-setup:prod && npm run build:prod",
    "build-ac": "npm run build-setup:prod && npm run build:ac && npm run build:ac_new",
    "test": "node script/jasmine-runner.js",
    "test:ci": "NODE_ENV=test node script/jasmine-runner.js",
    "test:debug": "node debug script/jasmine-runner.js",
    "lint": "eslint src test --ignore-pattern=src/translation/*.js",
    "lint-fix": "eslint --fix src test --ignore-pattern=src/translation/*.js",
    "validate-manifest": "node script/validate_manifest.js",
    "size": "bundlesize"
  },
  "bundlesize": [
    {
      "path": "dist/web_widget.*.js",
      "maxSize": "410 KB"
    },
    {
      "path": "dist/common_vendor.*.js",
      "maxSize": "100 KB"
    },
    {
      "path": "dist/talk_vendor.*.js",
      "maxSize": "50 KB"
    },
    {
      "path": "dist/chat_vendor.*.js",
      "maxSize": "50 KB"
    }
  ],
  "author": "Zendesk",
  "license": "All Rights Reserved",
  "dependencies": {
    "@zendeskgarden/css-arrows": "^3.1.0",
    "@zendeskgarden/css-tooltips": "^4.0.1",
    "@zendeskgarden/css-variables": "^4.1.3",
    "@zendeskgarden/svg-icons": "~4.0.0",
    "@zendeskgarden/css-buttons": "6.0.0",
    "airwaves": "~0.3.0",
    "chat-web-sdk": "git+ssh://git@github.com/zendesk/chat-web-sdk.git#v9.0.0",
    "classnames": "^2.2.5",
    "color": "~0.7.3",
    "core-js": "^2.5.1",
    "libphonenumber-js": "~0.4.49",
    "lodash": "~4.0.0",
    "luxon": "^1.2.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-linkify": "^0.2.2",
    "react-redux": "^5.0.6",
    "react-transition-group": "^2.2.1",
    "redux": "^3.7.2",
    "redux-logger": "^2.6.1",
    "redux-on-state-change": "^1.0.0",
    "redux-thunk": "^2.1.0",
    "reselect": "^3.0.1",
    "sanitize-html": "~1.11.4",
    "sha1": "^1.1.1",
    "socket.io-client": "^2.0.4",
    "sprintf-js": "^1.1.1",
    "superagent": "^2.0.0"
  },
  "devDependencies": {
    "app-root-path": "^2.0.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.0.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "bundlesize": "^0.17.0",
    "chalk": "^1.1.3",
    "concurrently": "^3.1.0",
    "css-loader": "^0.28.11",
    "cssstyle": "0.2.30",
    "dotenv": "^4.0.0",
    "es5-shim": "~3.4.0",
    "eslint": "^4.19.1",
    "eslint-plugin-jasmine": "^2.8.4",
    "eslint-plugin-react": "^3.16.1",
    "file-loader": "^1.1.11",
    "glob": "^6.0.1",
    "htmlmin": "0.0.4",
    "imports-loader": "^0.8.0",
    "inline-source": "^4.4.0",
    "jasmine": "^2.8.0",
    "jasmine-ajax": "git://github.com/pivotal/jasmine-ajax#v2.0.0.rc2",
    "jasmine-spec-reporter": "^2.4.0",
    "jsdom": "~7.2.2",
    "json-loader": "^0.5.7",
    "jsonwebtoken": "^5.7.0",
    "mockery": "~1.4.0",
    "node-cmd": "^3.0.0",
    "node-sass": "4.5.3",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "postcss-loader": "^2.1.5",
    "progress-bar-webpack-plugin": "^1.11.0",
    "raw-loader": "^0.5.1",
    "react-test-renderer": "^16.0.0",
    "react-transform-catch-errors": "^1.0.1",
    "redux-catch": "^1.3.1",
    "redux-mock-store": "^1.2.1",
    "require-uncached": "~1.0.2",
    "rest": "~1.2.0",
    "run-sequence": "~0.3.6",
    "sass-loader": "^7.0.1",
    "selenium-server": "~2.43.1",
    "semver": "^5.3.0",
    "source-map-loader": "^0.2.3",
    "svgo": "^0.5.6",
    "svgo-loader": "^1.1.2",
    "tiny-lr": "0.0.7",
    "uglify-js": "^2.8.29",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "^1.0.1",
    "webpack": "^4.8.3",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-manifest-plugin": "^2.0.3",
    "webpack-merge": "^4.1.2",
    "when": "~3.4.4",
    "yaml-loader": "^0.5.0"
  }
}
