    "bundlesize": "^0.17.0",
    "css-loader": "^0.28.11",
    "cssstyle": "1.1.1",
    "eslint": "^5.11.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jasmine": "^2.8.4",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-lodash": "^5.1.0",
