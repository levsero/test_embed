{
  "name": "embeddable-framework",
  "version": "0.1.0",
  "author": "Zendesk",
  "license": "All Rights Reserved",
  "private": true,
  "description": "3rd party embeddable framework and API",
  "engines": {
    "nvm": ">= 0.35.2",
    "node": ">= 12.21.0",
    "npm": ">= 6.13.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint:js": "eslint *.js config script packages --fix",
    "lint:other": "prettier --check \"**/*.{css,scss,json,md}\" --write",
    "lint": "npm run lint:js && npm run lint:other",
    "test": "TZ=utc jest",
    "test:updateSnapshots": "TZ=utc jest --updateSnapshot"
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-staged",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,scss,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-react": "^7.0.0",
    "@testing-library/dom": "^7.29.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "12.1.3",
    "@trivago/prettier-plugin-sort-imports": "^2.0.2",
    "audit-ci": "^2.3.0",
    "babel-eslint": "10.0.3",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jasmine": "^2.8.4",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-lodash": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.12.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "husky": "^1.3.1",
    "jest": "26.0.0",
    "jest-prop-type-error": "^1.1.0",
    "jest-styled-components": "^6.3.3",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.1"
  }
}
